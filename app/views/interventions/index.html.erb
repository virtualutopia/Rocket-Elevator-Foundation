<head>
<style>
  .table_interventions{font-size:15px}
</style>
</head>
<body>
<p id="notice"><%= notice %></p>
<br>
<br>

<div class="container">
<h1>Interventions</h1>
<table class="table_interventions">
  <thead>
    <tr>
      
      <th>Author ID</th>
      <th>Customer ID</th>
      <th>Building ID</th>
      <th>Employee ID</th>
      <th>Status</th>
      <th>Result</th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interventions.each do |intervention| %>
      <tr>
        <td><%= intervention.author_id %></td>
        <td><%= intervention.customer_id %></td>
        <td><%= intervention.building_id %></td>
        <td><%= intervention.employee_id %></td>
        <td><%= intervention.status %></td>
        <td><%= intervention.result %></td>
        
        
        <td><%= link_to 'Show', intervention, class: 'btn btn-success btn-sm'  %></td>
        <td><%= link_to 'Edit', edit_intervention_path(intervention), class: 'btn btn-success btn-sm'  %></td>
        <%# <td><%= link_to 'Destroy', intervention, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-success btn-sm'  %>
        <%# </td> %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Intervention', new_intervention_path, class: 'btn btn-success btn-sm' %>
</div>
</body>


